{
    "name": "Wordle Analytics",
    "description": "View a comprehensive analysis of your Wordle games and compare to others in the world!",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_title": "Wordle Analytics"
    },
    "content_scripts": [
        {
        "matches": ["https://www.nytimes.com/games/wordle/index.html"],
        "js": ["content.js"]
        }
    ],
    "permissions": [
        "storage",
        "sidePanel",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "panel.html",
        "default_title": "Wordle Analytics"
    },
    "web_accessible_resources": [
        {
            "resources": ["panel.html", "panel.css"],
            "matches": ["<all_urls>"]
        }
    ]
}